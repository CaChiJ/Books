{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C: clang 활성 파일 빌드",
            "command": "clang",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "c 파일 빌드"
        },
        {
            "type": "shell",
            "label": "C++: clang++ 활성 파일 빌드",
            "command": "clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "clear": true
            },
            "group": "build",
            "problemMatcher": [],
            "detail": "cpp 파일 빌드"
        },
        {
            "type": "shell",
            "label": "C/C++: 활성 파일 실행",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            },
            "detail": "빌드된 파일 실행"
        }
    ]
